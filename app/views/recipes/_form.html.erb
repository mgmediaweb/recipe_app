<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12 mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Enter a recipe name', required: true %>
    </div>

    <div class="col-12 col-md-6 mb-3">
      <%= form.label :preparation_time, class: 'form-label' %>
      <%= form.text_field :preparation_time, pattern: '[0-9]+', class: 'form-control' %>
    </div>

    <div class="col-12 col-md-6 mb-3">
      <%= form.label :cooking_time, class: 'form-label' %>
      <%= form.text_field :cooking_time, pattern: '[0-9]+', class: 'form-control' %>
    </div>

    <div class="col-12 mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="col-12 mb-3">
      <div class="form-check">
        <%= form.check_box :public, class: 'form-check-input' %>
        <%= form.label :public, class: 'form-check-label' %>        
      </div>      
    </div>

    <div class="col-12 mb-3">
      <%= form.label :photo, class: 'form-label' %>
      <%= form.text_field :photo, class: 'form-control', placeholder: 'Enter a url' %>
      <span class="comment">The URL of the photo must be a valid address</span>
    </div>    

    <div class="col-12 mt-3 text-end">
      <%= form.submit 'Save', class: 'btn btn-primary text-light ms-3' %>
    </div>
  </div>
<% end %>
